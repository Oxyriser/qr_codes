<h1>Listing Urls</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Url shortened</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
<%= for url <- @urls do %>
    <tr>
      <td><%= url.url %></td>
      <td>www.monsite.fr/<%= url.id %></td>
      <td>
          <% user = QrManager.UserManager.User |> QrManager.Repo.get(url.user_id) %>
          <%= user.login %>
      </td>
        <td>
          <%= link "Show", to: Routes.user_url_path(@conn, :show, url.user_id, url.id) %>
          <%= link "Edit", to: Routes.user_url_path(@conn, :edit, url.user_id, url.id) %>
          <%= link "Delete", to: Routes.user_url_path(@conn, :delete, url.user_id, url.id), method: :delete, data: [confirm: "Are you sure?"] %>
        </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Url", to: Routes.user_url_path(@conn, :new, @user_id) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :show, @user_id) %></span>
