<h1>Show Url</h1>

<ul>

  <li>
    <strong>Url:</strong>
    <%= @url.url %>
  </li>

  <li>
    <strong>Url shortened:</strong>
    <a href="">www.monsite.fr/<%= @url.id %></a>
  </li>

  <li>
    <strong>User ID:</strong>
    <% user = QrManager.UserManager.User |> QrManager.Repo.get(@url.user_id) %>
    <%= "#{user.first_name} #{user.last_name}" %>

  </li>

</ul>

<span><%= link "Edit", to: Routes.url_path(@conn, :edit, @url.user_id, @url.id) %></span>
<span><%= link "Back", to: Routes.url_path(@conn, :index, @url.user_id) %></span>
