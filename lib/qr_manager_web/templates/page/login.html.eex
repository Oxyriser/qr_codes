<%= form_for @changeset, Routes.user_url_path(@conn, :index, 1), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :login %>
  <%= text_input f, :login %>
  <%= error_tag f, :login %>

  <div>
    <%= submit "Enter" %>
  </div>
<% end %>
